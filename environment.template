# AZEBAL Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===== APPLICATION SETTINGS =====
APP_NAME=AZEBAL
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ===== SERVER SETTINGS =====
HOST=0.0.0.0
PORT=8000
RELOAD=true

# ===== MICROSOFT AUTHENTICATION =====
# OAuth 2.0 Application Registration
MS_CLIENT_ID=your_microsoft_app_client_id
MS_CLIENT_SECRET=your_microsoft_app_client_secret
MS_TENANT_ID=your_microsoft_tenant_id
MS_REDIRECT_URI=http://localhost:8000/auth/callback

# Microsoft Graph API
MS_GRAPH_SCOPE=https://graph.microsoft.com/.default
MS_AUTHORITY=https://login.microsoftonline.com/your_tenant_id

# ===== AZURE SETTINGS =====
# Azure Resource Management
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id

# Azure OpenAI Service
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# ===== DATABASE SETTINGS =====
# Redis Session Store (Development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MariaDB (Local Development)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=azebal_dev
DB_USER=azebal
DB_PASSWORD=your_local_db_password

# PostgreSQL (Production - when deployed)
# POSTGRES_HOST=your_postgres_host
# POSTGRES_PORT=5432
# POSTGRES_DB=azebal_prod
# POSTGRES_USER=azebal_user
# POSTGRES_PASSWORD=your_postgres_password

# ===== SECURITY SETTINGS =====
# JWT Token Configuration
JWT_SECRET_KEY=your_very_secure_random_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Encryption Key for Sensitive Data
ENCRYPTION_KEY=your_32_byte_base64_encoded_encryption_key

# ===== MCP SERVER SETTINGS =====
# Communication Protocol
MCP_PROTOCOL=stdio
MCP_TRANSPORT=stdio

# ===== MONITORING & LOGGING =====
# Structured Logging
LOG_FORMAT=json
LOG_FILE=logs/azebal.log

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# ===== DEVELOPMENT SETTINGS =====
# Testing
TEST_DB_NAME=azebal_test
MOCK_AZURE_APIS=true

# Development Features
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_SWAGGER_UI=true

# ===== PRODUCTION OVERRIDES =====
# Uncomment and configure for production deployment
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# MOCK_AZURE_APIS=false
# ENABLE_DEBUG_ENDPOINTS=false
