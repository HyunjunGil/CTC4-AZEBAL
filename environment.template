# AZEBAL Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===== PHASE 1: AZURE CLI AUTHENTICATION =====
# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id

# JWT Configuration
JWT_SECRET_KEY=your_very_secure_random_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging Configuration
LOG_LEVEL=INFO

# ===== LLM CONFIGURATION =====
# LLM Provider Selection (auto-detect if not set)
# LLM_PROVIDER=azure_openai  # Options: azure_openai, openai, anthropic

# Azure OpenAI Service
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# OpenAI Service
# OPENAI_API_KEY=your_openai_api_key
# OPENAI_MODEL_NAME=gpt-4

# Anthropic Service
# ANTHROPIC_API_KEY=your_anthropic_api_key
# ANTHROPIC_MODEL_NAME=claude-3-sonnet-20240229

# ===== PHASE 2: FUTURE CONFIGURATION (DO NOT USE YET) =====
# Redis Session Store (Phase 2)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# Database (Phase 2)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=azebal_dev
# DB_USER=azebal
# DB_PASSWORD=your_local_db_password

# ===== DEVELOPMENT SETTINGS =====
# Testing
# TEST_DB_NAME=azebal_test
# MOCK_AZURE_APIS=true

# Development Features
# ENABLE_DEBUG_ENDPOINTS=true
